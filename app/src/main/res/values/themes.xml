<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.Locator" parent="Theme.MaterialComponents.DayNight.NoActionBar">


		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/blue_light</item>
		<item name="colorPrimaryVariant">@color/blue_light_plus</item>
		<item name="colorOnPrimary">@color/white</item>


		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/green_light</item>
		<item name="colorSecondaryVariant">@color/green_light_plus</item>
		<item name="colorOnSecondary">@color/black</item>


		<item name="colorOnSurface">@color/gray_68</item>

		<item name="textColorPrimary">?attr/colorOnSurface</item>

		<item name="colorDivider">@color/gray_16_alpha_60</item>

		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimary</item>


		<!-- Custom attributes. -->
		<item name="colorHint">#7A000000</item>

	</style>
</resources>